#!/bin/sh
# Managed by Puppet
#
# Configuration common for master and slave

# enables mesos logging, otherwise stdout goes to LOG_DIR
<%- if !@log_dir.nil? && !@log_dir.empty? -%>
LOGS="<%= @log_dir %>"
<%- else -%>
#LOGS="/var/log/mesos"
<%- end -%>
ULIMIT="-n <%= @ulimit %>"

# environment variables that apply to master and slave
<% @env_var.sort.each do |key,val| -%>
export <%= key %>="<%= val %>"
<% end if @env_var -%>
